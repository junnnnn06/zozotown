- if user_signed_in?
  - if item.like_user(current_user.id)
    = botton_to item_like_path(like, item_id: item.id), method: :delete, id: "like_botton", remote: true do
      = image_tag("icon_red_heart.svg")
      %span
        = item.like_count
  - else
    = botton_to item_likes_path(item), id: "like-button", remote: true do
      = image_tag("icon_heart.svg")
      %span
        item.like_count
- else
  = image_tag("icon_heart.svg")
    %span
      = item.like_count
