!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Zozotown
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.2/css/drawer.min.css", :rel => "stylesheet"}/
    / jquery & iScroll
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.2.0/iscroll.min.js"}
    / drawer.js
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.2/js/drawer.min.js"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"}
  %body
    %body.drawer.drawer--top.drawer--navbarTopGutter
    %header.drawer-navbar.drawer-navbar--fixed{:role => "banner"}
      .drawer-container
        .drawer-navbar-header
          %a.drawer-brand{:href => "/items"} ZOZOTOWN
          %button.drawer-toggle.drawer-hamburger{:type => "button"}
            %span.sr-only toggle navigation
            %span.drawer-hamburger-icon
        %nav.drawer-nav{:role => "navigation"}
          %ul.drawer-menu
            %li.drawer-dropdown
              %a.drawer-menu-item{"aria-expanded" => "false", "data-target" => "#", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                ユーザー情報
                %span.drawer-caret
              %ul.drawer-dropdown-menu
                %li
                  %a.drawer-dropdown-menu-item{:href => "/users"} マイページ
                %li
                  %a.drawer-dropdown-menu-item{:href => "/items/:item_id/orders"} 購入履歴
                %li
                  %a.drawer-dropdown-menu-item{:href => ""} メールマガジン
            %li
              %a.drawer-menu-item{:href => "/users/sign_up"} 新規登録
            %li
              %a.drawer-menu-item{:href => "/users/sign_in"} ログイン
            %li
              %a.drawer-menu-item{:href => "/users/sign_out"} ログアウト
            %li.drawer-dropdown
              %a.drawer-menu-item{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                設定
                %span.drawer-caret
              %ul.drawer-dropdown-menu
                %li
                  %a.drawer-dropdown-menu-item{:href => "/users"} ユーザー情報
                %li
                  %a.drawer-dropdown-menu-item{:href => ""} 管理人ページ
    = render 'layouts/flash'
    = yield
