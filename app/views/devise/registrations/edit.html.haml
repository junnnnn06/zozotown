#edit-account-page.edit-account-page
  .edit-account-page__inner.clearfix
    .edit-account-page__inner--left.edit-account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path
      = link_to "マイページに戻る", :back
    .edit-account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name, value: "名前"
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email, value: "メールアドレス"
          .field-input
            = f.email_field :email
        .actions
          = f.submit "Update", class: 'btn'
